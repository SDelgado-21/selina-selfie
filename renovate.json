{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignoreDeps": ["org.junit.jupiter:junit-jupiter-api", "org.junit.platform:junit-platform-launcher"],
  "packageRules": [
    {
      "matchFileNames": ["selfie.dev/**"],
      "labels": ["docs"]
    },
    {
      "matchFileNames": ["jvm/**"],
      "labels": ["jvm"]
    }
  ],
  "schedule": [
    "every weekend"
  ]
}